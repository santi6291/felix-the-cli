{
  "services": {
    "scss": {
      "extension": "scss",
      "main": [
        {
          "path": "./src/scss",
          "template": "./assets/templates/scss/main/app.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_global.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_mixins.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_functions.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_reset.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_settings.hb"
        },
        {
          "path": "./src/scss/core",
          "template": "./assets/templates/scss/main/_variables.hb"
        },
        {
          "path": "./src/scss/utilities",
          "template": "./assets/templates/scss/main/_u-colors.hb"
        },
        {
          "path": "./src/scss/utilities",
          "template": "./assets/templates/scss/main/_u-fonts.hb"
        }
      ],
      "categories": {
        "module": {
          "path": "/module/_{slug}.scss",
          "template": "./assets/templates/scss/module.hb"
        },
        "utility": {
          "path": "/utilities/_u-{slug}.scss",
          "template": "./assets/templates/scss/utilities.hb"
        }
      }
    },
    "ts": {
      "extension": "ts",
      "main": [
        {
          "path": "./src/ts",
          "template": "./assets/templates/ts/app.hb"
        }
      ],
      "categories": {
        "block": {
          "path": "/blocks",
          "template": "./assets/templates/ts/blocks.hb"
        },
        "components": {
          "path": "/components",
          "template": "./assets/templates/ts/components.hb"
        },
        "service": {
          "path": "/service",
          "template": "./assets/templates/ts/service.hb"
        }
      }
    },
    "twig": {
      "extension": "twig",
      "main": [
        {
          "path": "./src/views",
          "template": "./assets/templates/twig/main.hb"
        }
      ],
      "categories": {
        "block": {
          "path": "/blocks",
          "template": "./assets/templates/twig/blocks.hb"
        },
        "components": {
          "path": "/components",
          "template": "./assets/templates/twig/components.hb"
        }
      }
    }
  }
}
